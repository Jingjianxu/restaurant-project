<div class="page-header">
  <h3>Account #<%= @account.username %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt>Username</dt>
      <dd><%= @account.username %></dd>

      <dt>Password</dt>
      <dd><%= @account.password %></dd>

      <dt>Firstname</dt>
      <dd><%= @account.firstname %></dd>

      <dt>Lastname</dt>
      <dd><%= @account.lastname %></dd>

      <dt>Email</dt>
      <dd><%= @account.email %></dd>


    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/accounts" class="btn btn-primary">
        Back
      </a>
      <a href="/accounts/<%= @account.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_account/<%= @account.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
