<div class="page-header">
  <h1>
    Appetizers
    <a href="/appetizers/new" class="btn btn-lg btn-success"><i class="fa fa-plus"></i></a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <thead>
      <tr>
        <th></th>
        <th>Dish</th>
        <th>Price</th>
        <th>Spicy</th>
        <th>Hot Dish</th>
        <th></th>
        <th></th>

      </tr></thead>

      <tr>
        <% @appetizers.each do |appetizer| %>

        <td><img src="<%= appetizer.image_url %>" width="50"></td>
        <td><%= appetizer.dish %></td>
        <td><%= appetizer.price %></td>
        <td><%= appetizer.spicy %></td>
        <td><%= appetizer.hot %></td>
          <th></th>
        <td>
          <a href="/appetizers/<%= appetizer.id %>" class="btn btn-primary">Show</a>
          <a href="/appetizers/<%= appetizer.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_appetizer/<%= appetizer.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>


    </table>
  </div>
</div>
