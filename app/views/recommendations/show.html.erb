<div class="page-header">
  <h3>Recommendation: <%= @recommendation.dish %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt>Image</dt>
      <dd><img src="<%= @recommendation.image_url %>" width="600"></dd>
      <dt>Dish</dt>
      <dd><%= @recommendation.dish %></dd>

      <dt>Price</dt>
      <dd><%= @recommendation.price %></dd>

      <dt>Spicy</dt>
      <dd><%= truncate(@recommendation.spicy) %></dd>


  </dl>
  <div class="btn-group btn-group-justified">
    <a href="/recommendations" class="btn btn-primary">
      Back
    </a>
    <a href="/recommendations/<%= @recommendation.id %>/edit" class="btn btn-warning">
      Edit
    </a>
    <a href="/delete_recommendation/<%= @recommendation.id %>" class="btn btn-danger" rel="nofollow">
      Delete
    </a>
  </div>
</div>
