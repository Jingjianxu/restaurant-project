<div class="page-header">
  <h1>
    Recommendations
    <a href="/recommendations/new" class="btn btn-lg btn-success"><i class="fa fa-plus"></i></a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <thead>
      <tr>
        <th></th>
        <th>Dish</th>
        <th>Price</th>
        <th>Spicy</th>
        <th></th>
        <th></th>

      </tr></thead>
      <tr>
        <% @recommendations.each do |recommendation| %>

        <td><img src="<%= recommendation.image_url %>" width="50"></td>
        <td><%= recommendation.dish %></td>
        <td><%= recommendation.price %></td>
        <td><%= recommendation.spicy %></td>
        <th></th>
        <td>
          <a href="/recommendations/<%= recommendation.id %>" class="btn btn-primary">Show</a>
          <a href="/recommendations/<%= recommendation.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_recommendation/<%= recommendation.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>


    </table>
  </div>
</div>
