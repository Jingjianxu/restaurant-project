<div class="page-header">
  <h1>
    Entrees
    <a href="/entrees/new" class="btn btn-lg btn-success"><i class="fa fa-plus"></i></a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <thead>
      <tr>
        <th></th>
        <th>Dish</th>
        <th>Price</th>
        <th>Spicy</th>
        <th></th>
        <th></th>
        <th></th>
      </tr></thead>
      <tr>
        <% @entrees.each do |entree| %>

        <td><img src="<%= entree.image_url %>" width="50"></td>
        <td><%= entree.dish %></td>
        <td><%= entree.price %></td>
        <td><%= entree.spicy %></td>
        <td>
          <a href="/entrees/<%= entree.id %>" class="btn btn-primary">Show</a>
          <a href="/entrees/<%= entree.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_entree/<%= entree.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>

    </table>
  </div>
</div>
